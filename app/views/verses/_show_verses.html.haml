- unless verses.empty?
  %ul.verses
    - verses.each do |verse|
      %li.verse-row{id: "verse-#{verse.id}"}
        - verse.words.split(" ").each_with_index do |word, index|
          .word-note
            .note{id: "#{verse.id}_#{index}", align: 'center'}= render 'verses/show_verse_word', verse: verse, index: index
            .word{align: 'center'}= word
        .end-verse
          - if @edit
            .verse-edit= link_to 'edit', song_name_edit_a_verse_path(verse.song_name_id, verse_id: verse), remote: true
            .verse-delete= link_to 'delete', song_name_delete_verse_path(verse.song_name_id, verse_id: verse), remote: true

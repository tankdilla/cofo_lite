%p#notice= notice

%p
  %b Title:
  = @song_name.title

%p
  %b Description:
  = @song_name.description

- if @song_name.song_id  
  %p
    %b= link_to "Song", song_path(@song_name.song_id)

%p
  %b Lyrics:
#verses
  = render 'verses/show_verses', verses: @song_name.verses, song_notes: @song_notes

%p
  = link_to 'Edit Song Lyrics', song_name_edit_verses_path(@song_name)

= link_to 'Edit', edit_song_name_path(@song_name)
\|
= link_to 'Destroy', @song_name, :method => :delete, :data => { :confirm => 'Are you sure?' }
\|
= link_to 'Back', song_names_path

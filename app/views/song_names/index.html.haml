%table.song-names
  - @song_names.each do |song_name|
    %tr
      %td
        %span.song-name
          = link_to "#{song_name.title}", song_name
        by
        %span.artist
          = song_name.artist
%br

= link_to 'Create a song', new_song_name_path if user_signed_in?

  - if @song_name.errors.any?
    #error_explanation
      %h2= "#{pluralize(@song_name.errors.count, "error")} prohibited this song_name from being saved:"
      %ul
        - @song_name.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :artist
    = f.text_field :artist
  .field
    = f.label :genre
    = f.text_field :genre
  .field
    = f.label :album
    = f.text_field :album
  .field
    = f.label 'Song Key'
    = select_tag(:key, options_from_collection_for_select(@notes, :name, :name), {class: 'span1'})
